@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-4 rounded">
        <h1 class="display-4">Xoş Gəlmisiniz!</h1>
        <hr class="my-4">
        <p>Aşağıdakı linklərdən istifadə edərək əməliyyatlara başlaya bilərsiniz.</p>
    </div>

    <div class="row mt-4">
        <!-- Subjects Section -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Dərslər</h5>
                    <p class="card-text">Dərsləri idarə etmək üçün bu bölmədən istifadə edin.</p>
                    <a href="/Subjects" class="btn btn-primary">Dərslərə Keç</a>
                </div>
            </div>
        </div>

        <!-- Students Section -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Şagirdlər</h5>
                    <p class="card-text">Şagirdlərin qeydiyyatını və məlumatlarını idarə edin.</p>
                    <a href="/Students" class="btn btn-success">Şagirdlərə Keç</a>
                </div>
            </div>
        </div>

        <!-- Exams Section -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">İmtahanlar</h5>
                    <p class="card-text">İmtahan nəticələrini qeydiyyata alın və idarə edin.</p>
                    <a href="/Exams" class="btn btn-warning">İmtahanlara Keç</a>
                </div>
            </div>
        </div>
    </div>
</div>
