@model IEnumerable<ExamProgram.Models.Student>

<h1 class="mb-4">Şagirdlər</h1>
<a href="@Url.Action("Create", "Students")" class="btn btn-primary mb-3">Yeni Şagird Əlavə Et</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Sinif</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Class</td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = student.Id })" class="btn btn-warning btn-sm">Düzəliş</a>
                    <a href="@Url.Action("Details", "Students", new { id = student.Id })" class="btn btn-info btn-sm">Detay</a>
                    <a href="@Url.Action("Delete", "Students", new { id = student.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
